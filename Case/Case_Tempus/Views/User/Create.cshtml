@model CaseTempus.Models.UserViewModel
@{
  ViewData["Title"] = "Adicionar usuário";
}

<div class="container">
  <header class="jumbotron flex-column">
    <small class="d-block text-uppercase text-muted">Usuários</small>
    <h1 class="display-4 font-weight-bold text-uppercase">Cadastrar novo usuário</h1>
  </header>

  <section class="row no-gutters">
    <div class="col-12">
      <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
          <label asp-for="Name" class="control-label"></label>
          <input asp-for="Name" class="form-control" type="text" pattern="^[a-zA-Z\s]*$" maxlength="150" required />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="CPF" class="control-label"></label>
          <input asp-for="CPF" class="form-control" pattern="\d*" type="number" maxlength="11" />
          <span asp-validation-for="CPF" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="BirthDate" class="control-label"></label>
          <input asp-for="BirthDate" class="form-control" type="date" required />
          <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="register">
          <label asp-for="RegisterDate" class="control-label"></label>
          <input asp-for="RegisterDate" class="form-control" readonly />
          <span asp-validation-for="RegisterDate" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="FamilyIncome" class="control-label"></label>
          <input asp-for="FamilyIncome" class="form-control" type="number" />
          <span asp-validation-for="FamilyIncome" class="text-danger"></span>
        </div>

        <div class="form-footer">
          <a asp-action="Index" class="btn btn-link">Voltar</a>
          <input type="submit" value="Adicionar" class="btn btn-primary" />
        </div>
      </form>
    </div>
  </section>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
