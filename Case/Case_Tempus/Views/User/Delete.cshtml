@model CaseTempus.Models.UserViewModel
@{
    ViewData["Title"] = "Remover usuário selecionado";
}

<div class="container">
  <header class="jumbotron flex-column">
    <small class="d-block text-uppercase text-muted">Usuários</small>
    <h1 class="display-4 font-weight-bold text-uppercase">Remover usuário</h1>
  </header>

  <section>
    <dl class="row no-gutters">
      <dt class="col-12">@Html.DisplayNameFor(model => model.Name)</dt>
      <dd class="col-12">@Html.DisplayFor(model => model.Name)</dd>

      <dt class="col-12">@Html.DisplayNameFor(model => model.CPF)</dt>
      <dd class="col-12">@Html.DisplayFor(model => model.CPF)</dd>

      <dt class="col-12">@Html.DisplayNameFor(model => model.BirthDate)</dt>
      <dd class="col-12">@Html.DisplayFor(model => model.BirthDate)</dd>

      <dt class="col-12">@Html.DisplayNameFor(model => model.RegisterDate)</dt>
      <dd class="col-12">@Html.DisplayFor(model => model.RegisterDate)</dd>

      <dt class="col-12">@Html.DisplayNameFor(model => model.FamilyIncome)</dt>
      <dd class="col-12">@Html.DisplayFor(model => model.FamilyIncome)</dd>
    </dl>

    <form asp-action="Delete">
      <input type="hidden" asp-for="Id" />

      <a asp-action="Index" class="btn btn-link">Voltar</a>
      <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
  </section>
</div>
